<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- 自訂錯誤頁面設定 -->
    <customErrors mode="Off" />

    <!-- 身分驗證設定 -->
    <authentication mode="Windows" />

    <!-- 授權設定 -->
    <authorization>
      <allow users="*" />
    </authorization>

    <!-- Session 狀態設定 -->
    <sessionState mode="InProc" timeout="20" />
  </system.web>

  <system.webServer>
    <!-- 啟用靜態檔案支援 -->
    <handlers>
      <add name="StaticFile" path="*" verb="*" modules="StaticFileModule" resourceType="Either" requireAccess="Read" />
    </handlers>

    <!-- 預設文件 -->
    <defaultDocument>
      <files>
        <add value="index.html" />
        <add value="default.html" />
        <add value="default.aspx" />
      </files>
    </defaultDocument>

    <!-- MIME 類型 -->
    <staticContent>
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>
  </system.webServer>

  <!-- 資料庫連線字串 -->
  <connectionStrings>
    <add name="RainbowDBContext01" 
         connectionString="Server=192.168.1.12,1433;Database=CHIComp01;User Id=sa;Password=rainbowchi;" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>